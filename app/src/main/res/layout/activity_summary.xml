<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    tools:context=".ui.activities.SummaryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tool"
        android:background="@color/colorPrimaryDark"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginStart="10dp"
            app:tint="@color/white"
            android:contentDescription="@string/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/pickup_summary"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/back"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/questrial"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="0dp"
            android:id="@+id/mc1"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/txt1"
                  android:text="Your garbage pickup"
                  android:textSize="20sp"
                  android:fontFamily="@font/questrial"
                  android:layout_margin="20dp"
                  android:layout_marginTop="10dp"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/txt1"
                   android:layout_centerHorizontal="true"
                   android:background="@drawable/border_bg"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1000"
                       android:textSize="30sp"
                       android:fontFamily="@font/questrial"
                       android:id="@+id/wtTV"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="kgs"
                       android:layout_marginStart="20dp"
                       android:textSize="20sp"
                       android:fontFamily="@font/questrial"
                       android:id="@+id/msTV"
                       android:layout_gravity="center_vertical"
                       />
               </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:id="@+id/mc2"
                android:layout_below="@id/mc1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_location"
                    android:textSize="20sp"
                    android:id="@+id/pick_loc"
                    android:fontFamily="@font/questrial"
                    android:layout_margin="20dp"
                    />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/questrial"
                     android:id="@+id/addTV"
                     android:text="This is sample addres lenth for\n test purtpose kldf gdop gjd fd flgk\ndk b dio gv d jvbi od vid oiv"
                     android:layout_below="@id/pick_loc"
                     android:layout_marginHorizontal="20dp"
                     android:textAlignment="center"
                     android:textColor="@color/black_70"
                     android:layout_centerHorizontal="true"
                     android:textSize="20sp"
                     android:layout_marginBottom="20dp"
                     />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textSize="20sp"
                        android:layout_below="@id/addTV"
                        android:id="@+id/phn_t"
                        android:fontFamily="@font/questrial"
                        android:layout_margin="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:elevation="10dp"
                        android:id="@+id/phnTV"
                        android:text="9999999999"
                        android:layout_below="@id/phn_t"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/phn_bg"
                        android:fontFamily="@font/questrial"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mc2"
                app:cardElevation="5dp"
                android:layout_marginBottom="130dp"
                >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/t1"
                  android:text="Payments"
                  android:fontFamily="@font/questrial"
                  android:textSize="30sp"
                  android:layout_margin="20dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Select method you want to get paid"
                  android:layout_below="@id/t1"
                  android:layout_margin="20dp"
                  android:textSize="15sp"
                  android:id="@+id/tdesc"
                  android:fontFamily="@font/questrial"/>
              <RadioGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/tdesc"
                  android:id="@+id/rg"
                  android:layout_margin="20dp"
                  >
                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/phonepe"
                      android:fontFamily="@font/questrial"
                      android:textSize="20sp"/>
                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/paytm"
                      android:fontFamily="@font/questrial"
                      android:textSize="20sp"/>
                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/google_pay"
                      android:fontFamily="@font/questrial"
                      android:textSize="20sp"/>
                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/upi"
                      android:fontFamily="@font/questrial"
                      android:textSize="20sp"/>
              </RadioGroup>
          </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>



        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cnfrmBtn"
        android:elevation="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="CONFIRM"
        android:layout_marginBottom="30dp"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent.Btn"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/cnclBtn"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="30dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorPrimaryDark"
        android:text="Cancel"
        android:layout_weight="1"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent.BtnR"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
 <include layout="@layout/bottom_sheet_payment"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>