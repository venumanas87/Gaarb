<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.v.gaarb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".settings.FirebaseSetting"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.activities.ReminderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activities.BuyGarbageActivity" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_name" />
        <receiver
            android:name=".reciever.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="" />
        <activity android:name=".ui.activities.AdminActiviy" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activities.OrdersActivity" android:screenOrientation="portrait" />
        <activity android:name=".ui.activities.ConfirmedActivity" android:screenOrientation="portrait" />
        <activity android:name=".ui.activities.SummaryActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activities.SellGarbActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activities.HomeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.onboarding.SignupActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.onboarding.LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.onboarding.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MessaginService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>